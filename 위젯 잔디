////Container '위젯
Widget createBody0() {
  return Container(
    padding: const EdgeInsets.only(
      left: 20,
      right: 20,
    ).    //EdgeInsets.only
    decoration: BoxDecoration(
      gradient: LinearGradient(
        colors: [
          Color.fromARGB(255, 255, 59, 98).withOpacity(0.7),
          Color.fromARGB(255, 255, 59, 98)
        ],
        begin: Alignment.topLeft,
        end: Alignment.bottomRight,
      ),    //LinearGradient
      borderRadius: BorderRadius.circular(10),
      boxShadow: [
        BoxShadow(
          color: Color.fromARGB(255, 255, 59, 98).withOpercity(0.5),
          spreadRadius: 5;
          blurRadius: 7,
          offset: Offset(0, 3), //changes position of shadow
        ),    //BoxShadow
      ],
    ),    //BoxDecoration
    width: 200,
    height: 150,
    child: Center(
      child: Text(
        'Container',
        style: TextStyle(color: Colors.while),
      ),    //Text
    ),    //Center
  ),    //Container
}




////Row, Column '위젯
// 1,
Widget createBody1()
{
  return Container(
    color:   Colors.blue,
    height: 100,
    child: Row(        //Column
      mainAxisAlignment: MainAxisAlignment.spaceAround,
      crossAxisAlignment: CrossAxisAlignment.center,
      children: List.generate(
        5,
        (index) => Container(
          width: 40,
          height: 40,
          color: colors.red,
          margin: const EdgeInsets.all(5),
        ),    //Container
      ),    //List.generate
    ),    //Column
  );    //Container
}




////­Row에서의 "Expanded" '위젯
//
Widget createBody2()
{
  return Row(
    mainAxisAlignment: mainAxisAlignment.spaceEvenly,
    children: [
      ...List.generate(
        4,
        (index) => Container(
          width: 40,
          height: 40,
          color: Colors.red,
          margin: const EdgeInsets.all(5),
        ),    //Container
      ),    //List.generate
      Expanded(
        child: Container(
          height: 40,
          color: Color.red,
          margin: const EdgeInset.all(5),
        ),    //Container
      ),    //Expanded
    ],
  );    //Row
}
